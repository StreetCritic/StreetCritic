{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
        "node",
        "vite/client"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "target": "esnext",
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "rootDirs": [
        ".",
        "./.react-router/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@/api-bindings/*": [
        "../api/bindings/*",
      ],
      "niceways-geo-lib": [
        "../niceways/geo-lib/pkg"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
